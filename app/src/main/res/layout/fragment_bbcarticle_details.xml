<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArticleDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleFragment_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/descriptionFragment_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateFragment_TextView"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/dateFragment_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleFragment_TextView"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text=""
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/readRestHereFragment_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionFragment_TextView"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Read the rest of the article here:"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/urlFragment_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/readRestHereFragment_TextView"
            android:autoLink="web"
            android:linksClickable="true"
            android:paddingBottom="10dp"
            android:text=""
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnFragment_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:backgroundTint="@android:color/black"
            android:text="@string/btnFragment_Btn"
            android:textColor="@color/white" />

    </RelativeLayout>


</FrameLayout>